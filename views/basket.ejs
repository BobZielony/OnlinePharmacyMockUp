<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Document</title>
</head>

<body>
  <script>
    const add = (idx) => {
      let element = document.getElementById(idx);
      let value = element.innerHTML;
      ++value;
      console.log(value);
      document.getElementById(idx).innerHTML = value;
    };
    const sub = (idx) => {
      let element = document.getElementById(idx);
      let value = element.innerHTML;
      if (value > 1) {
        --value;
      }
      console.log(value);
      document.getElementById(idx).innerHTML = value;
    };
  </script>
  <div>
    <% basket.forEach((elem,idx)=>{ %>
      <section style="background-color: #eee; flex: 1 1 25%; margin: 10px">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
              <h5 class="mb-0">
                <%= elem.productName %>
              </h5>
              <button onclick="sub('<%= idx %>')">-</button>
              <p id="<%= idx %>">1</p>
              <button onclick="add('<%= idx %>')">+</button>

              <h5 class="text-dark mb-0">$<%= elem.price %>
              </h5>
            </div>
          </div>
        </div>
      </section>

      <% }) %>

  </div>

  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <div>


                    <div class="form-floating">
                      <select class="form-select">
                        <option>DPD</option>
                        <option>DHL</option>
                        <option>InPost</option>
                      </select>
                    </div>
                    <div class="form-check">
                      <input type="radio" name="payment" class="form-check-input" />
                      <label class="form-check-label">Tradycyjna</label>
                    </div>
                    <div class="form-check">
                      <input type="radio" name="payment" class="form-check-input" />
                      <label class="form-check-label">Przelew</label>
                    </div>
                    <div class="form-check">
                      <input type="radio" name="payment" class="form-check-input" />
                      <label class="form-check-label">U kuriera</label>
                    </div>
                    <div class="form-check">

                      <input type="checkbox" class="form-check-input" />
                      <label class="form-check-label">Czy akceptujesz regulamin i przetwarzanie danych
                        osobistych</label>

                    </div>
                    <button class="btn btn-success" ><a href="/logout" style="color: white;">Zakoncz zamowienie</a></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>